<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherTodayFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/weatherpanel_id"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/cityname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Weather In Kolkata"
            android:textStyle="italic|bold"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/weatherimage_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/temperature_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="35 C"
                android:textStyle="italic|bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Weather Description"
            android:textStyle="italic|bold"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/datetime_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Weather Description"
            android:textStyle="italic|bold"
            android:textColor="@color/colorPrimary"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stretchColumns="*"
            android:padding="16dp"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Wind"
                    />
                <TextView
                    android:id="@+id/windtext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Speed: 1 Deg: 1"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pressure"
                    />
                <TextView
                    android:id="@+id/pressuretext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1024.33 hpa"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Humidity"
                    />
                <TextView
                    android:id="@+id/humiditytext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="100%"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sunrise"
                    />
                <TextView
                    android:id="@+id/sunrisetext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="05:00"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sunset"
                    />
                <TextView
                    android:id="@+id/sunsettext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="19:00"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Geo Coord"
                    />
                <TextView
                    android:id="@+id/geocoordtext_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="{33.0 , -90.45}"
                    android:layout_marginLeft="8dp"
                    android:layout_column="1"
                    />
                
            </TableRow>
            

        </TableLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"

        />


</RelativeLayout>